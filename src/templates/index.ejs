<!doctype html>
<html>
<head>
	<%- include('head', { ...analytics }); %>
</head>
<body>
	<header class="w-screen h-24 bg-blue-700 text-center text-gray-100">
		
		<div class="grid h-24 place-content-center justify-items-center font-gruppo">
			<h1><%= contact.name %></h1>
			<h3><%= contact.tagline %></h3>
		</div>

		<!-- PDF download button -->
		<div class="print:hidden absolute top-1 right-1">
			<a class="text-white bg-blue-600 hover:bg-blue-900 font-medium rounded-lg text-sm px-2 py-1 focus:outline-none" 
				href="resume.pdf" target="_blank"
				download="<%= contact.name.replaceAll('.', '').replaceAll(' ', '_'); %>_Resume.pdf">
				<span class="hidden md:inline">Download</span> <i class="fa-regular fa-file-pdf"></i>
			</a>
		</div>
	</header>

	<div id="content" class="md:flex md:flex-row print:block px-6 pt-6">

		<!-- left column -->
		<aside class="md:basis-1/5 space-y-6 min-w-[225px]">
			<%- include('contact', contact); %>
			<%- include('skills', topSkills); %>
		</aside>

		<!-- right column -->
		<main class="md:basis-4/5 md:pl-6 print:pl-0 md:min-w-[540px]">
			<%- include('about', about); %>
			<%- include('experience', experience); %>
			<%- include('education', education); %>
		</main>
	</div>

	<footer class="print:hidden flex h-16 text-center items-center">
		<p class="w-screen text-xs text-gray-500">
			Copyright &copy; <%= datefns.format(new Date(), 'yyyy') %> 
			<a href="<%= contact.website %>"><%= contact.name %></a>. All rights reserved.
		</p>
	</footer>
</body>
</html>
